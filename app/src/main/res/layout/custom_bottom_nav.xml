<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomNavContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:elevation="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <!-- Tab Beranda -->
    <LinearLayout
        android:id="@+id/tabBeranda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconBeranda"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_beranda" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textBeranda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beranda"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Tab Tambah -->
    <LinearLayout
        android:id="@+id/tabTambah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconTambah"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_tambah" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textTambah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Tab Penjemputan -->
    <LinearLayout
        android:id="@+id/tabPenjemputan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconPenjemputan"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_penjemputan" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textPenjemputan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penjemputan"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Tab Profile -->
    <LinearLayout
        android:id="@+id/tabProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconProfile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_akun" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>
